    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build_run"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Build and Test",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build_test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Build",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Run Tests",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}